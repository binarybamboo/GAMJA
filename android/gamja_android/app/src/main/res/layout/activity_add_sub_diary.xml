<?xml version="1.0" encoding="utf-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.AddSubDiaryActivity"
        android:orientation="vertical"
        android:background="@drawable/gradient"
        >

        <Button
            android:id="@+id/post_sub_diary_btn"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="28dp"
            android:background="@drawable/gradient"
            android:text="작성"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/sub_diary_img"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="116dp"
            android:background="@drawable/gamja_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sub_title"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="내용"
            android:textAlignment="center"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sub_content" />

        <EditText
            android:id="@+id/sub_diary_title"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="24dp"
            android:layout_toRightOf="@+id/sub_title"
            android:gravity="center"
            android:hint="제목을 입력해주세요"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.298"
            app:layout_constraintStart_toEndOf="@+id/sub_content"
            app:layout_constraintTop_toBottomOf="@+id/sub_diary_img" />

        <TextView
            android:id="@+id/sub_content"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="제목"
            android:textAlignment="center"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sub_diary_img" />

        <EditText
            android:id="@+id/sub_diary_content"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="24dp"
            android:layout_toRightOf="@+id/sub_content"
            android:gravity="center"
            android:hint="제목을 입력해주세요"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.298"
            app:layout_constraintStart_toEndOf="@+id/sub_title"
            app:layout_constraintTop_toBottomOf="@+id/sub_diary_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>